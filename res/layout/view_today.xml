<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_today"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" >

        <ImageView
            android:id="@+id/phenomena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/weather_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phenomena"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/nowtemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="00°"
            android:textSize="75dp" />

        <LinearLayout
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/nowtemp"
            android:layout_toRightOf="@id/nowtemp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/windD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风向"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/windP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风强"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nowtemp"
        android:layout_marginTop="100dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tempHL"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="00°"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/i1"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/tempHL"
                android:layout_weight="1"
                android:gravity="center"
                android:longClickable="true"
                android:text="指数"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/i2"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@id/tempHL"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:longClickable="true"
                android:text="指数"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/i3"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/i2"
                android:gravity="center"
                android:layout_weight="1"
                android:longClickable="true"
                android:text="指数"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/sunrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sundown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />
    

</LinearLayout>